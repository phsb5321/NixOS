[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-p": "command_palette::Toggle",
      "ctrl-p": "file_finder::Toggle",
      "ctrl-shift-o": "outline::Toggle",
      "ctrl-shift-f": "workspace::NewSearch",
      "ctrl-shift-h": "search::ReplaceInProject",
      "ctrl-shift-e": "workspace::ToggleLeftDock",
      "ctrl-shift-x": "extensions::Toggle",
      "ctrl-shift-g": "workspace::ToggleLeftDock",
      "ctrl-shift-d": "diagnostics::Deploy",
      "ctrl-n": "workspace::NewFile",
      "ctrl-o": "workspace::Open",
      "ctrl-s": "workspace::Save",
      "ctrl-shift-s": "workspace::SaveAs",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-shift-w": "workspace::CloseWindow",
      "ctrl-k ctrl-w": "pane::CloseAllItems",
      "ctrl-shift-t": "pane::ReopenClosedItem",
      "ctrl-g": "go_to_line::Toggle",
      "ctrl-shift-\\": "pane::SplitRight",
      "ctrl-\\": "pane::SplitDown",
      "ctrl-1": ["pane::ActivateItem", 0],
      "ctrl-2": ["pane::ActivateItem", 1],
      "ctrl-3": ["pane::ActivateItem", 2],
      "ctrl-4": ["pane::ActivateItem", 3],
      "ctrl-5": ["pane::ActivateItem", 4],
      "ctrl-6": ["pane::ActivateItem", 5],
      "ctrl-7": ["pane::ActivateItem", 6],
      "ctrl-8": ["pane::ActivateItem", 7],
      "ctrl-9": ["pane::ActivateItem", 8],
      "ctrl-`": "terminal_panel::ToggleFocus",
      "ctrl-shift-`": "workspace::NewTerminal",
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-j": "workspace::ToggleBottomDock",
      "ctrl-=": "zed::IncreaseBufferFontSize",
      "ctrl--": "zed::DecreaseBufferFontSize",
      "ctrl-0": "zed::ResetBufferFontSize"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-a": "editor::SelectAll",
      "ctrl-l": "editor::SelectLine",
      "ctrl-d": "editor::SelectNext",
      "ctrl-shift-l": "editor::SelectAllMatches",
      "ctrl-u": "editor::UndoSelection",
      "ctrl-alt-down": "editor::AddCursorBelow",
      "ctrl-alt-up": "editor::AddCursorAbove",
      "shift-alt-down": "editor::DuplicateLineDown",
      "shift-alt-up": "editor::DuplicateLineUp",
      "alt-down": "editor::MoveLineDown",
      "alt-up": "editor::MoveLineUp",
      "ctrl-c": "editor::Copy",
      "ctrl-x": "editor::Cut",
      "ctrl-v": "editor::Paste",
      "ctrl-z": "editor::Undo",
      "ctrl-y": "editor::Redo",
      "ctrl-shift-z": "editor::Redo",
      "f12": "editor::GoToDefinition",
      "ctrl-f12": "editor::GoToTypeDefinition",
      "shift-f12": "editor::FindAllReferences",
      "ctrl-shift-f12": "editor::GoToImplementation",
      "f2": "editor::Rename",
      "ctrl-k ctrl-i": "editor::Hover",
      "ctrl-f": "buffer_search::Deploy",
      "ctrl-h": "buffer_search::Deploy",
      "f3": "search::SelectNextMatch",
      "shift-f3": "search::SelectPrevMatch",
      "ctrl-f3": "search::SelectNextMatch",
      "ctrl-shift-f3": "search::SelectPrevMatch",
      "escape": "buffer_search::Dismiss",
      "ctrl-.": "editor::ToggleCodeActions",
      "ctrl-space": "editor::ShowCompletions",
      "ctrl-shift-space": "editor::ShowInlayHints",
      "ctrl-shift-j": "editor::Unfold",
      "shift-alt-f": "editor::Format",
      "ctrl-k ctrl-f": "editor::Format",
      "ctrl-shift-k": "editor::DeleteLine",
      "ctrl-enter": "editor::NewlineBelow",
      "ctrl-shift-enter": "editor::NewlineAbove",
      "ctrl-]": "editor::Indent",
      "ctrl-[": "editor::Outdent",
      "ctrl-shift-[": "editor::Fold",
      "ctrl-shift-]": "editor::Unfold",
      "ctrl-k ctrl-0": "editor::FoldAll",
      "ctrl-k ctrl-j": "editor::UnfoldAll",
      "ctrl-/": "editor::ToggleComments",
      "shift-alt-a": "editor::ToggleBlockComment",
      "ctrl-k ctrl-k": "editor::ToggleBookmark",
      "ctrl-k ctrl-n": "editor::GoToNextBookmark",
      "ctrl-k ctrl-p": "editor::GoToPrevBookmark"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "enter": "project_panel::Open",
      "space": "project_panel::ExpandSelectedEntry"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-c": "terminal::Copy",
      "ctrl-v": "terminal::Paste",
      "ctrl-shift-c": "terminal::Copy",
      "ctrl-shift-v": "terminal::Paste"
    }
  },
  {
    "context": "Search",
    "bindings": {
      "enter": "search::SelectNextMatch",
      "shift-enter": "search::SelectPrevMatch"
    }
  }
]