{
  // ===== USER INTERFACE & APPEARANCE =====
  "theme": "Ayu Dark",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_fallbacks": ["FiraCode Nerd Font Mono"],
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },

  "base_keymap": "VSCode",
  "vim_mode": false,

  // ===== EDITOR BEHAVIOR =====
  "auto_save": "on_focus_change",
  "auto_save_delay": 1000,
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "show_whitespaces": "selection",
  "soft_wrap": "editor_width",
  "wrap_guides": [80, 100, 120],
  "preferred_line_length": 100,
  "hard_tabs": false,
  "tab_size": 2,
  "cursor_blink": true,
  "show_edit_predictions": true,

  // ===== VISUAL ENHANCEMENTS =====
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "relative_line_numbers": "disabled",
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "runnables": true,
    "folds": true
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "symbols": true,
    "selected_symbol": true,
    "search_results": true,
    "diagnostics": "all",
    "git_diff": true
  },

  // ===== PANEL CONFIGURATION =====
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true,
    "auto_fold_dirs": false,
    "auto_reveal_entries": true,
    "default_width": 300
  },
  "outline_panel": {
    "dock": "right",
    "button": true,
    "default_width": 300
  },
  "collaboration_panel": {
    "dock": "left",
    "button": false
  },
  "chat_panel": {
    "dock": "right",
    "button": "always"
  },
  "notification_panel": {
    "dock": "right",
    "button": true
  },

  // ===== TAB SETTINGS =====
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "close_position": "right"
  },

  // ===== GIT INTEGRATION =====
  "git": {
    "enabled": true,
    "git_gutter": "tracked_files",
    "status_bar": true,
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },

  // ===== SEARCH & FIND =====
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  // ===== TERMINAL CONFIGURATION =====
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 16,
    "copy_on_select": true,
    "dock": "bottom",
    "default_width": 640,
    "default_height": 320,
    "working_directory": "current_project_directory",
    "shell": {
      "program": "zsh"
    },
    "toolbar": {
      "title": true
    }
  },

  // ===== COPILOT & AI INTEGRATION =====
  "features": {
    "copilot": true,
    "edit_prediction_provider": "zed"
  },
  "show_copilot_suggestions": true,
  "copilot": {
    "disabled_globs": [".env*", "*.key", "*.pem", "*.cert", "secrets/**", "**/secrets/**"]
  },

  // ===== EDIT PREDICTIONS (Your existing config) =====
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },

  // ===== AGENT CONFIGURATION (Your existing config) =====
