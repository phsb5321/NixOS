  // ===== ASSISTANT CONFIGURATION =====
  "agent": {
    "enabled": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "dock": "right",
    "default_width": 400,
    "button": true
  },

  // ===== LANGUAGE SERVER PROTOCOL (GLOBAL) =====
  "lsp": {
    // ===== ENHANCED NIX LANGUAGE SERVER CONFIG =====
    "nixd": {
      "initialization_options": {
        "nixpkgs": {
          "expr": "import <nixpkgs> { }"
        },
        "formatting": {
          "command": ["alejandra"]
        },
        "options": {
          "nixos": {
            "expr": "(builtins.getFlake \"/home/notroot/NixOS\").nixosConfigurations.default.options"
          },
          "home-manager": {
            "expr": "(builtins.getFlake \"/home/notroot/NixOS\").homeConfigurations.\"notroot@nixos\".options"
          }
        }
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["alejandra"]
        },
        "nix": {
          "flake": {
            "autoArchive": true,
            "autoEvalInputs": true
          }
        }
      }
    }
  },

  // ===== DIAGNOSTICS =====
  "diagnostics": {
    "include_warnings": true
  },

  // ===== LANGUAGE-SPECIFIC SETTINGS =====
  "languages": {
    "Nix": {
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false,
      "language_servers": ["nixd", "!nil"],
      "formatter": {
        "external": {
          "command": "alejandra",
          "arguments": ["--quiet"]
        }
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TypeScript": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TSX": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSX": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSON": {
      "tab_size": 2,
      "language_servers": ["json-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSONC": {
      "tab_size": 2,
      "language_servers": ["json-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "YAML": {
      "tab_size": 2,
      "language_servers": ["yaml-language-server"],
      "format_on_save": "on"
    },
    "TOML": {
      "tab_size": 2,
      "language_servers": ["taplo"],
      "format_on_save": "on"
    },
    "Rust": {
      "tab_size": 4,
      "language_servers": ["rust-analyzer"],
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "language_servers": ["gopls"],
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Python": {
      "tab_size": 4,
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "black",
          "arguments": ["--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "Elixir": {
      "tab_size": 2,
      "language_servers": ["elixir-ls", "!lexical"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    },
    "Bash": {
      "tab_size": 2,
      "language_servers": ["bash-language-server"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "2", "-ci"]
        }
      }
    },
    "Shell": {
      "tab_size": 2,
      "language_servers": ["bash-language-server"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["-i", "2", "-ci"]
        }
      }
    },
    "HTML": {
      "tab_size": 2,
      "language_servers": ["html-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "CSS": {
      "tab_size": 2,
      "language_servers": ["css-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "SCSS": {
      "tab_size": 2,
      "language_servers": ["css-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Markdown": {
      "tab_size": 2,
      "language_servers": ["marksman"],
      "format_on_save": "off",
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80,
      "show_whitespaces": "none"
    }
  },

  // ===== WORKSPACE SETTINGS =====
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/.vscode",
    "**/.idea",
    "**/target",
    "**/build",
    "**/dist",
    "**/.next",
    "**/.nuxt",
    "**/coverage",
    "**/*.log",
    "**/result",
    "**/result-*"
  ],

  // ===== TELEMETRY & PRIVACY =====
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ===== SSH CONNECTIONS (Your existing config) =====
  "ssh_connections": [
