{
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "base_keymap": "VSCode",
  "vim_mode": false,
  "auto_save": "on_focus_change",
  "format_on_save": "on",
  "tab_size": 2,
  "hard_tabs": false,
  "lsp": {
    "nixd": {
      "initialization_options": {
        "nixpkgs": {
          "expr": "import <nixpkgs> { }"
        },
        "formatting": {
          "command": ["alejandra"]
        }
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["alejandra"]
        }
      }
    }
  },
  "languages": {
    "Nix": {
      "format_on_save": "on",
      "tab_size": 2,
      "hard_tabs": false,
      "language_servers": ["nixd"],
      "formatter": {
        "external": {
          "command": "alejandra",
          "arguments": ["--quiet"]
        }
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 2,
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on"
    },
    "JSON": {
      "tab_size": 2,
      "language_servers": ["json-language-server"],
      "format_on_save": "on"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
