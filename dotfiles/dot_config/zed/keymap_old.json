[
  // ===== GLOBAL BINDINGS =====
  {
    "bindings": {
      // Your existing binding - close all items
      "ctrl-shift-w": "pane::CloseAllItems",

      // Enhanced file operations
      "ctrl-shift-n": "workspace::NewFile",
      "ctrl-shift-s": "workspace::SaveAll",
      "ctrl-alt-s": "workspace::SaveAs",

      // Quick actions
      "ctrl-shift-p": "command_palette::Toggle",
      "ctrl-shift-f": "search::ToggleReplace",
      "ctrl-h": "search::ToggleReplace",

      // Panel toggles
      "ctrl-shift-e": "workspace::ToggleLeftDock",
      "ctrl-shift-x": "extensions::Toggle",
      "ctrl-shift-g": "search::ToggleFocus",
      "ctrl-shift-d": "diagnostics::Deploy",

      // Terminal operations
      "ctrl-shift-`": "terminal::ToggleFocus",
      "ctrl-shift-c": "editor::Copy",
      "ctrl-shift-v": "editor::Paste",

      // Code navigation
      "f12": "editor::GoToDefinition",
      "shift-f12": "editor::GoToReferences",
      "ctrl-f12": "editor::GoToImplementation",
      "alt-f12": "editor::GoToTypeDefinition",
      "f2": "editor::Rename",

      // Code actions
      "ctrl-.": "editor::ToggleCodeActions",
      "alt-enter": "editor::ToggleCodeActions",
      "ctrl-shift-r": "editor::RefactorExtractVariable",

      // Multi-cursor and selection
      "ctrl-d": "editor::SelectNext",
      "ctrl-shift-d": "editor::SelectPrevious",
      "ctrl-alt-down": "editor::AddSelectionBelow",
      "ctrl-alt-up": "editor::AddSelectionAbove",
      "ctrl-shift-l": "editor::SelectAll",

      // Line operations
      "ctrl-shift-k": "editor::DeleteLine",
      "alt-up": "editor::MoveLineUp",
      "alt-down": "editor::MoveLineDown",
      "ctrl-shift-alt-up": "editor::DuplicateLineUp",
      "ctrl-shift-alt-down": "editor::DuplicateLineDown",

      // Folding
      "ctrl-shift-[": "editor::Fold",
      "ctrl-shift-]": "editor::Unfold",
      "ctrl-k ctrl-0": "editor::FoldAll",
      "ctrl-k ctrl-j": "editor::UnfoldAll",

      // Git operations
      "ctrl-shift-g g": "git::OpenGitPanel",
      "ctrl-shift-g c": "git::Commit",
      "ctrl-shift-g p": "git::Push",
      "ctrl-shift-g u": "git::Pull",
      "ctrl-shift-g s": "git::Stage",

      // Formatting and linting
      "shift-alt-f": "editor::Format",
      "ctrl-k ctrl-f": "editor::Format",

      // Comments
      "ctrl-/": "editor::ToggleComments",
      "ctrl-shift-/": "editor::ToggleBlockComment",

      // Zen mode and focus
      "f11": "workspace::ToggleZenMode",
      "ctrl-k z": "workspace::ToggleZenMode"
    }
  },

  // ===== WORKSPACE CONTEXT =====
  {
    "context": "Workspace",
    "bindings": {
      // Your existing binding - toggle right dock
      "ctrl-b": "workspace::ToggleRightDock",

      // Enhanced workspace navigation
      "ctrl-shift-e": "workspace::ToggleLeftDock",
      "ctrl-shift-o": "outline_panel::Toggle",

      // File explorer operations
      "ctrl-n": "workspace::NewFile",
      "ctrl-shift-n": "workspace::NewWindow",
      "ctrl-o": "workspace::Open",
      "ctrl-k ctrl-o": "workspace::OpenFolder",

      // Tab management
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-shift-t": "pane::ReopenClosedItem",
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePrevItem",
      "ctrl-1": "pane::ActivateItem(0)",
      "ctrl-2": "pane::ActivateItem(1)",
      "ctrl-3": "pane::ActivateItem(2)",
      "ctrl-4": "pane::ActivateItem(3)",
      "ctrl-5": "pane::ActivateItem(4)",
      "ctrl-6": "pane::ActivateItem(5)",
      "ctrl-7": "pane::ActivateItem(6)",
      "ctrl-8": "pane::ActivateItem(7)",
      "ctrl-9": "pane::ActivateItem(8)",

      // Split management
      "ctrl-\\": "pane::SplitRight",
      "ctrl-shift-\\": "pane::SplitDown",
      "ctrl-k ctrl-w": "pane::CloseAllItems",

      // Search operations
      "ctrl-f": "buffer_search::Deploy",
      "ctrl-shift-f": "project_search::ToggleFocus",
      "f3": "search::SelectNextMatch",
      "shift-f3": "search::SelectPrevMatch",
      "escape": "search::Dismiss",

      // Quick navigation
      "ctrl-p": "file_finder::Toggle",
      "ctrl-shift-p": "command_palette::Toggle",
      "ctrl-t": "file_finder::Toggle",
      "ctrl-r": "recent_projects::Toggle",

      // AI and Copilot
      "ctrl-i": "assistant::ToggleFocus",
      "alt-\\": "copilot::Toggle",
      "ctrl-shift-i": "copilot::Suggest"
    }
  },

  // ===== EDITOR CONTEXT =====
  {
    "context": "Editor",
    "bindings": {
      // Your existing binding - toggle right dock
      "ctrl-b": "workspace::ToggleRightDock",

      // Enhanced editor navigation
      "ctrl-g": "go_to_line::Toggle",
      "ctrl-shift-o": "outline::Toggle",
      "ctrl-shift-m": "diagnostics::Deploy",

      // Code completion and suggestions
      "ctrl-space": "editor::ShowCompletions",
      "ctrl-shift-space": "editor::ShowHover",
      "alt-space": "copilot::Suggest",

      // Bracket matching
      "ctrl-shift-\\": "editor::GoToBracket",

      // Indentation
      "ctrl-]": "editor::Indent",
      "ctrl-[": "editor::Outdent",
      "tab": "editor::Indent",
      "shift-tab": "editor::Outdent",

      // Text transformation
      "ctrl-k ctrl-u": "editor::ConvertToUpperCase",
      "ctrl-k ctrl-l": "editor::ConvertToLowerCase",

      // Quick fixes and refactoring
      "ctrl-shift-r": "editor::Rename",
      "f2": "editor::Rename",
      "ctrl-.": "editor::ToggleCodeActions",

      // Bookmarks
      "ctrl-k ctrl-k": "editor::ToggleBookmark",
      "ctrl-k ctrl-n": "editor::GoToNextBookmark",
      "ctrl-k ctrl-p": "editor::GoToPrevBookmark",

      // LSP features
      "alt-f7": "editor::FindAllReferences",
      "ctrl-k ctrl-i": "editor::ShowHover",
      "ctrl-k ctrl-d": "editor::GoToDefinition",

      // Copilot specific
      "alt-]": "copilot::NextSuggestion",
      "alt-[": "copilot::PreviousSuggestion",
      "ctrl-alt-enter": "copilot::AcceptSuggestion"
    }
  },

  // ===== PROJECT PANEL CONTEXT =====
  {
    "context": "ProjectPanel",
    "bindings": {
      // Your existing binding - open in terminal
      "ctrl-shift-j": "workspace::OpenInTerminal",

      // Enhanced project panel operations
      "enter": "project_panel::Open",
      "space": "project_panel::OpenPermanent",
      "ctrl-enter": "project_panel::OpenInNewPane",
      "alt-enter": "project_panel::RevealInFileManager",

      // File operations
      "a": "project_panel::NewFile",
      "shift-a": "project_panel::NewDirectory",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "v": "project_panel::Paste",

      // Navigation
      "j": "menu::SelectNext",
      "k": "menu::SelectPrev",
      "h": "project_panel::CollapseSelectedEntry",
      "l": "project_panel::ExpandSelectedEntry",

      // Refresh and focus
      "f5": "project_panel::Refresh",
      "ctrl-r": "project_panel::Refresh",
      "escape": "workspace::ToggleLeftDock"
    }
  },

  // ===== TERMINAL CONTEXT =====
  {
    "context": "Terminal",
    "bindings": {
      // Terminal navigation
      "ctrl-shift-`": "terminal_panel::ToggleFocus",
      "ctrl-shift-c": "terminal::Copy",
      "ctrl-shift-v": "terminal::Paste",
      "ctrl-c": "terminal::SendText",

      // Terminal management
      "ctrl-shift-t": "terminal_panel::NewTerminal",
      "ctrl-shift-w": "terminal_panel::CloseTerminal",
      "ctrl-tab": "terminal_panel::NextTerminal",
      "ctrl-shift-tab": "terminal_panel::PrevTerminal",

      // Clear and navigation
      "ctrl-l": "terminal::Clear",
      "ctrl-k": "terminal::Clear",
      "escape": "workspace::ToggleBottomDock"
    }
  },

  // ===== SEARCH CONTEXT =====
  {
    "context": "Search",
    "bindings": {
      // Search navigation
      "enter": "search::SelectNextMatch",
      "shift-enter": "search::SelectPrevMatch",
      "ctrl-enter": "search::SelectAllMatches",
      "alt-enter": "search::ToggleReplace",

      // Search options
      "alt-c": "search::ToggleCaseSensitive",
      "alt-w": "search::ToggleWholeWord",
      "alt-r": "search::ToggleRegex",

      // Replace operations
      "ctrl-alt-enter": "search::ReplaceAll",
      "ctrl-shift-1": "search::ReplaceNext",

      // Exit search
      "escape": "search::Dismiss"
    }
  },

  // ===== AUTOCOMPLETE CONTEXT =====
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-p": "editor::ContextMenuPrev",
      "ctrl-n": "editor::ContextMenuNext",
      "ctrl-e": "editor::Cancel",
      "enter": "editor::ConfirmCompletion",
      "tab": "editor::ConfirmCompletion",
      "ctrl-space": "editor::ShowCompletions"
    }
  },

  // ===== ASSISTANT/AI CONTEXT =====
  {
    "context": "AssistantPanel",
    "bindings": {
      "ctrl-enter": "assistant::Assist",
      "ctrl-s": "assistant::Save",
      "ctrl-c": "assistant::Copy",
      "escape": "assistant::ToggleFocus",
      "ctrl-r": "assistant::Restart"
    }
  }
]
