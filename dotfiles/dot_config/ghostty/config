# Ghostty Configuration - Optimized for NixOS Wayland Performance
# Addresses freezing issues and improves stability

# Performance optimizations
window-colorspace = srgb
background-opacity = 1.0
font-thicken = false

# Appearance (catppuccin-mocha colors defined in palette below)
background = #1e1e2e
foreground = #cdd6f4
cursor-color = #f38ba8
cursor-style = block
cursor-style-blink = false
selection-background = #313244
selection-foreground = #cdd6f4

# Font configuration
font-family = JetBrainsMono Nerd Font
font-size = 13
font-style = Regular

# Window settings
window-decoration = true
window-height = 45
window-width = 120
window-padding-x = 8
window-padding-y = 8
unfocused-split-opacity = 1.0

# Terminal behavior optimizations
auto-update = off
confirm-close-surface = false
copy-on-select = false
clipboard-paste-protection = false
mouse-hide-while-typing = true
click-repeat-interval = 500

# Shell integration optimizations
shell-integration = zsh
shell-integration-features = no-cursor
working-directory = inherit

# Performance-focused keybinds
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+equal=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1
keybind = ctrl+shift+0=reset_font_size

# Unbind keys that conflict with Zellij (PT-BR ABNT2 keyboard compatibility)
# Alt+arrow keys are used by Zellij for pane navigation
keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = alt+up=unbind
keybind = alt+down=unbind
# Unbind alt+f (Zellij floating pane toggle)
keybind = alt+f=unbind
# Unbind alt+n (Zellij new pane)
keybind = alt+n=unbind


# Color palette (catppuccin-mocha)
palette = 0=#45475a
palette = 1=#f38ba8
palette = 2=#a6e3a1
palette = 3=#f9e2af
palette = 4=#89b4fa
