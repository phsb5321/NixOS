# Server-specific secrets TEMPLATE
# Copy this file to server-secrets.nix and fill in your values
# This file should NEVER be committed to git
{
  config,
  lib,
  ...
}: {
  # Cloudflare Tunnel credentials
  # To create a new tunnel:
  #   1. cloudflared tunnel login
  #   2. cloudflared tunnel create audiobookshelf
  #   3. cloudflared tunnel route dns audiobookshelf your-domain.com
  #   4. Copy the tunnel ID and credentials file path below
  modules.services.cloudflareTunnel = {
    enable = true; # This enables the tunnel (disabled by default in configuration.nix)
    tunnelId = "YOUR-TUNNEL-ID-HERE";
    credentialsFile = "/home/notroot/.cloudflared/YOUR-TUNNEL-ID-HERE.json";
  };

  # Add other host-specific secrets here:
  # - API keys
  # - Service passwords
  # - Private tokens
}
